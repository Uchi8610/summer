<nav aria-label="breadcrumb"　>
  <ol class="breadcrumb"　>
    <li class="breadcrumb-item"><a href="/">トップページ</a></li>
    <li class="breadcrumb-item"><a href="/users">ユーザー一覧</a></li>
    <li class="breadcrumb-item"><a href="/<%= @user.id%>"><%= @user.name%></a></li>
    <li class="breadcrumb-item active" aria-current="page">個人の欠席連絡一覧</li>
  </ol>
</nav>

<table class="table">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">年-月-日</th>
      <th scope="col">理由</th>
    </tr>
  </thead>
  <tbody>
    <% @user.absents.reverse_each do |absent| %>
      <tr>
        <th>
          <%= absent.user.name%>
        </th>
        <td>
          <%= absent.when%>
        </td>
        <td>
          <%= absent.reason%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
